@model IEnumerable<descent_remote_final.Models.User>

@{
    ViewData["Title"] = "Index";
}

<div class="admin-site">
    <h1>Index</h1>

    <button id="reset-game-button" onclick="resetGame()">Reset Game</button>

    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Character)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SkillCards)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ClassEquipmentCards)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ShopCards)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FamiliarCards)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Character.Name)
                    </td>
                    <td>
                        @if (item.SkillCards != null)
                        {
                            @foreach (var card in item.SkillCards)
                            {
                                <p>@card.Name</p>
                            }
                        }
                    </td>
                    <td>
                        @if (item.ClassEquipmentCards != null)
                        {
                            @foreach (var card in item.ClassEquipmentCards)
                            {
                                <p>@card.Name</p>
                            }
                        }
                    </td>
                    <td>
                        @if (item.ShopCards != null)
                        {
                            @foreach (var card in item.ShopCards)
                            {
                                <p>@card.Name</p>
                            }
                        }
                    </td>
                    <td>
                        @if (item.FamiliarCards != null)
                        {
                            @foreach (var card in item.FamiliarCards)
                            {
                                <p>@card.Name</p>
                            }
                        }
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
